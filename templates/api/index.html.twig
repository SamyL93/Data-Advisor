                <a href="{{ path('api_article') }}" target="_blank">
                    {{ app.request.uri }}{{ path('api_article') }}
                </a>
            </div>
            <div class="col-12 p-2">
                <a href="{{ path('api_3_box_internet') }}" target="_blank">
