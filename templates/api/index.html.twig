                    {{ app.request.uri }}{{ path('api_box_internet') }}
                </a>
            </div>
            <div class="col-12 p-2">
                <a href="{{ path('api_mobile') }}" target="_blank">
                    {{ app.request.uri }}{{ path('api_mobile') }}
                </a>
            </div>
