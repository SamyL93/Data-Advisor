                <a href="{{ path('api_3_mobile') }}" target="_blank">
                    {{ app.request.uri }}{{ path('api_3_mobile') }}
                </a>
            </div>
            <div class="col-12 p-2">
                <a href="{{ path('api_carte_identifier', {identifier : "5G"}) }}" target="_blank">
